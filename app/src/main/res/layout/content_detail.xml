<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextAppearance.AppCompat.Large.Inverse"
        android:text="@string/movie_title"
        android:gravity="center"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tvReleaseYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        android:text="@string/release_year"
        style="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:textColor="@color/cloud"
        android:gravity="center"/>
    <RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvReleaseYear"
        android:theme="@style/RatingBar"
        style="@style/Widget.AppCompat.RatingBar"
        android:numStars="5"
        android:rating="3"
        android:scaleX=".6"
        android:scaleY=".6"
        android:layout_marginTop="20dp" />
    <TextView
        android:id="@+id/tvGenres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rating"
        style="@style/TextAppearance.AppCompat.Medium.Inverse"
        android:text="@string/genres"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tvGenres"
        app:layout_constraintEnd_toEndOf="@+id/tvGenres"
        app:layout_constraintTop_toBottomOf="@+id/tvGenres"
        style="@style/TextAppearance.AppCompat.Small.Inverse"
        android:text="@string/movie_title"
        android:layout_marginTop="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>